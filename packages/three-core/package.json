{
  "name": "@react-face/three-core",
  "version": "1.0.0",
  "type": "module",
  "description": "Modular Three.js engine with 42 managers and on-demand initialization",
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs",
      "types": "./dist/index.d.ts"
    },
    "./lightweight": {
      "import": "./dist/lightweight.js",
      "require": "./dist/lightweight.cjs",
      "types": "./dist/lightweight.d.ts"
    },
    "./standard": {
      "import": "./dist/standard.js",
      "require": "./dist/standard.cjs",
      "types": "./dist/standard.d.ts"
    },
    "./full": {
      "import": "./dist/full.js",
      "require": "./dist/full.cjs",
      "types": "./dist/full.d.ts"
    },
    "./professional": {
      "import": "./dist/professional.js",
      "require": "./dist/professional.cjs",
      "types": "./dist/professional.d.ts"
    },
    "./core/*": {
      "import": "./dist/core/*.js",
      "require": "./dist/core/*.cjs",
      "types": "./dist/core/*.d.ts"
    },
    "./chunks/*": {
      "import": "./dist/chunks/*.js"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "vite build",
    "build:lightweight": "vite build --config vite.config.lightweight.ts",
    "build:standard": "vite build --config vite.config.standard.ts",
    "build:full": "vite build --config vite.config.full.ts",
    "build:professional": "vite build --config vite.config.professional.ts",
    "dev": "vite",
    "preview": "vite preview",
    "clean": "rimraf dist",
    "type-check": "tsc --noEmit",
    "lint": "eslint src --ext .ts",
    "test": "vitest",
    "prepublishOnly": "npm run clean && npm run build"
  },
  "keywords": [
    "three.js",
    "3d",
    "webgl",
    "engine",
    "modular",
    "on-demand",
    "lightweight",
    "performance",
    "optimization",
    "code-splitting"
  ],
  "author": "Chovi Team",
  "license": "MIT",
  "peerDependencies": {
    "three": "^0.160.0"
  },
  "dependencies": {
    "@react-face/shared-types": "workspace:*"
  },
  "devDependencies": {
    "@types/three": "^0.160.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "rimraf": "^5.0.0",
    "terser": "^5.0.0",
    "typescript": "^5.0.0",
    "vite": "^5.0.0",
    "vitest": "^1.0.0"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/react-face/three-core.git"
  },
  "bugs": {
    "url": "https://github.com/react-face/three-core/issues"
  },
  "homepage": "https://github.com/react-face/three-core#readme"
}
